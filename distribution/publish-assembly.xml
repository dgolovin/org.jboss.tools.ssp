<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>publish</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/rsp-distribution/conf/</outputDirectory>
			<fileMode>755</fileMode>
			<includes>
				<include>logback.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target/felix-framework-${felix.version}</directory>
			<outputDirectory>/rsp-distribution/</outputDirectory>
			<fileMode>755</fileMode>
            <!--
            Gogo bundles cause issues on windows. Excluding since provide no added value for us.
            -->
			<excludes>
				<exclude>**/*gogo*</exclude>
			</excludes>
		</fileSet>
        <fileSet>
			<directory>${project.basedir}/target/repository/plugins</directory>
            <outputDirectory>/rsp-distribution/felix-framework-${felix.version}/bundle</outputDirectory>
	  </fileSet>
	</fileSets>
</assembly>

